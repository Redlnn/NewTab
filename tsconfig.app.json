{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "paths": {
    "#i18n": ["./.wxt/i18n/index.ts"],
    "#i18n/*": ["./.wxt/i18n/index.ts/*"]
  },
  "include": [
    "./.wxt/i18n/**/*",
    "./.wxt/types/**/*",
    "./entrypoints/**/*",
    "./types/**/*",
    "./utils/optimizeDeps.ts"
  ],
  "exclude": ["./.output", "./.wxt/types/imports.d.ts"],
  "compilerOptions": {
    "composite": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "jsx": "preserve",
    "jsxImportSource": "vue"
  }
}
